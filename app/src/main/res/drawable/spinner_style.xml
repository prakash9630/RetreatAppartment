<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <stroke android:width="2dp"
                android:color="#cc1B1464"/>


            <corners android:radius="5dp" />


            <gradient
                android:startColor="#C8C8C8"
                android:endColor="#FFFFFF"
                android:type="linear"
                android:angle="270"/>

            <padding android:bottom="10dp" android:left="3dp" android:right="10dp" android:top="3dp" />
        </shape></item>
        <item ><bitmap android:gravity="bottom|right" android:src="@drawable/downarrow" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>

</selector>