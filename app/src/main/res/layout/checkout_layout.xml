<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Checkout"
        app:titleTextColor="@color/white"
        android:background="@color/thembluecolor"
        ></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:padding="20dp"
        
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/chekoutmargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeOfCheckout"
            android:text="Full Name "/>
        <EditText
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:id="@+id/check_fullname"
            android:layout_width="match_parent"
android:inputType="text"
            android:background="@drawable/edittextshape"
            android:layout_height="@dimen/checkoutedttextheight" />


        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chekoutmargin"
            android:textSize="@dimen/textSizeOfCheckout"
            android:text="Email address "/>
         <EditText
             android:textCursorDrawable="@null"
             android:padding="10dp"
             android:id="@+id/check_email"
             android:inputType="textEmailAddress"
             android:background="@drawable/edittextshape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/checkoutedttextheight" />

        <TextView
            android:layout_marginTop="@dimen/chekoutmargin"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeOfCheckout"
            android:text="Country "/>
     <Spinner
         android:padding="10dp"
         android:id="@+id/checkout_spinner"
         android:layout_width="match_parent"
         android:background="@drawable/edittextshape"
         android:layout_height="@dimen/checkoutedttextheight"></Spinner>


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/chekoutmargin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeOfCheckout"
            android:text="Address "/>
        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/check_address"
            android:layout_width="match_parent"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edittextshape"
            android:layout_height="@dimen/checkoutedttextheight" />


        <TextView
            android:layout_marginTop="@dimen/chekoutmargin"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeOfCheckout"
            android:text="City "/>
        <EditText
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:id="@+id/check_city"
            android:inputType="text"
            android:layout_width="match_parent"
            android:background="@drawable/edittextshape"
            android:layout_height="@dimen/checkoutedttextheight"/>


        <Button
            android:id="@+id/check_button"
            android:layout_width="150dp"
            android:theme="@style/MyButton"
            android:text="Confirm"
           android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="50dp" />





    </LinearLayout>

    </ScrollView>

</LinearLayout>