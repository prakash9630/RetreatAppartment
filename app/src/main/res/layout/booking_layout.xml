<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/booking_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/thembluecolor"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Availability"/>


        </LinearLayout>

        <LinearLayout

            android:paddingBottom="10dp"
            android:paddingTop="10dp"


            android:layout_marginTop="10dp"
            android:background="@drawable/form_border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:paddingTop="@dimen/padding_linearlayout_booking"
            android:paddingBottom="@dimen/padding_linearlayout_booking"


            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="12dp"
android:drawableLeft="@drawable/drawable_calendar"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:text="@string/Arrival"
            android:layout_height="wrap_content"
            android:layout_weight=".45"/>

    <EditText
        android:inputType="none"
        android:textIsSelectable="true"
        android:focusable="false"

android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_of_edittext_in_booking"
        android:id="@+id/arrival_date"



        android:background="@drawable/edittext_shape"
        android:layout_weight=".50"/>

        </LinearLayout>
            <LinearLayout

              android:paddingTop="@dimen/padding_linearlayout_booking"
                android:paddingBottom="@dimen/padding_linearlayout_booking"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/drawable_calendar"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:text="@string/Departure"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"/>

                <EditText
                    android:textAlignment="center"
                    android:inputType="none"
                    android:textIsSelectable="true"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_of_edittext_in_booking"
                    android:id="@+id/departure_date"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edittext_shape"
                    android:layout_weight=".50"/>

            </LinearLayout>


            <LinearLayout

                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:text="@string/units"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"/>
                <Spinner
                    android:textAlignment="center"
                    android:id="@+id/spinner_unit"
                    android:background="@drawable/spinner_style"
                    android:spinnerMode="dropdown"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="@dimen/height_of_edittext_in_booking"></Spinner>
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:text="@string/person"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"/>

                <Spinner
                    android:textAlignment="center"
                    android:id="@+id/spinner_person"
                    android:background="@drawable/spinner_style"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="@dimen/height_of_edittext_in_booking"></Spinner>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/button_shape"
                    android:layout_width="match_parent"
                    android:text="Check now"
                    android:textColor="#ffffff"
                    android:layout_height="60dp" />



            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>