<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:weightSum="100"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.revision.tap.retre.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"


            android:id="@+id/fragment_viewpager"


            />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/inciator"
            android:background="#99000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:weightSum="1">

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view3"
                                            android:elevation="20dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_weight=".4"
                                            card_view:cardBackgroundColor="@color/cardview_grey"
                                            android:layout_marginBottom="@dimen/card_view_margintop"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view4"
                                            android:elevation="20dp"
                                            card_view:cardBackgroundColor="@color/cardview_grey"

                                            android:layout_marginBottom="@dimen/card_view_margintop"

                                            android:layout_marginLeft="@dimen/card_view_marginleftright"
                                            android:layout_weight=".4"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>











                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:weightSum="1">

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view5"
                                            android:elevation="20dp"
                                            card_view:cardBackgroundColor="@color/cardview_grey"

                                            android:layout_marginRight="10dp"
                                            android:layout_weight=".4"
                                            android:layout_marginBottom="@dimen/card_view_margintop"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view6"
                                            android:elevation="20dp"
                                            android:layout_marginBottom="@dimen/card_view_margintop"
                                            card_view:cardBackgroundColor="@color/cardview_grey"

                                            android:layout_marginLeft="@dimen/card_view_marginleftright"
                                            android:layout_weight=".4"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>











                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:weightSum="1">

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view"
                                            android:elevation="20dp"
                                            card_view:cardBackgroundColor="@color/cardview_grey"

                                            android:layout_marginRight="10dp"
                                            android:layout_weight=".4"
                                            android:layout_marginBottom="@dimen/card_view_margintop"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>

                                        <android.support.v7.widget.CardView
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="0dp"
                                            android:id="@+id/card_view1"
                                            android:elevation="20dp"
                                            android:layout_marginBottom="@dimen/card_view_margintop"
                                            card_view:cardBackgroundColor="@color/cardview_grey"

                                            android:layout_marginLeft="@dimen/card_view_marginleftright"
                                            android:layout_weight=".4"
                                            android:layout_marginTop="@dimen/card_view_margintop"
                                            android:layout_height="@dimen/card_view_height">



                                        </android.support.v7.widget.CardView>











                                </LinearLayout>








                        </LinearLayout>









                </ScrollView>





        </LinearLayout>






             </LinearLayout>









