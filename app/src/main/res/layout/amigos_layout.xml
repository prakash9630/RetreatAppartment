<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/bamboo_id"
        android:theme="@style/ToolbarStyle"
        android:background="@color/thembluecolor"
        app:title="Amigo's cafe"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_places"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/amegos"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>




            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="@dimen/marginfortext"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amigo's cafe"

                        android:padding="10dp"
                        android:textAlignment="center"
                        android:id="@+id/swyambhu_title"/>
                    <TextView
                        android:layout_marginLeft="@dimen/marginfortext"
                        android:layout_marginRight="@dimen/marginfortext"
                        android:padding="10dp"
                        android:text="Introducing first time ever in Nepal, Footpool, a combination of football and pool, Amigo's Cafe offers unique experiences to share with friends. Offering variety of breakfast, brunch, fastfood and specially brewed coffee from Nepali coffee beans, it is situated right opposite Bigmart at Jhamsikhel. From special screening of football games to dedicated  game zone where you can play xbox and playstation, it is a cool place to hang out at.
"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <Button
                        android:id="@+id/bamboo_google_map"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:theme="@style/MyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/white"
                        android:text="Get direction"/>


                </LinearLayout>









            </FrameLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>