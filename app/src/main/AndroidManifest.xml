        <activity android:name=".Rooms.TwoBedRoomDeluxe"></activity>
        <activity android:name=".Rooms.ValueForMoney"></activity>
        <activity android:name=".Booking" android:label="Booking Enquiry" >

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainActivity"></meta-data>


        </activity>
        <activity android:name=".RoomType" android:label="RoomType">

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".MainActivity"></meta-data>

        </activity>
